{
    "name": "GF Utility",
    "version": "0.1",

    "description": "GF(Beta) Utility Tool",

    "browser_action": {
      "default_title": "GF Utility Menu",
      "default_text": "GF Utility Menu",
      "default_popup": "index.html"
    },
    "background":{
      "scripts":[
        "js/ranking.js",
        "js/srClean.js",
        "js/sellHN.js"
      ],
      "persistent": false
    },

    "permissions": [
      "activeTab",
      "tabs",
      "notifications",
      "https://vcard.ameba.jp/*"
    ], 

    "author": "ANNIE",  // 作成者（任意）
    "incognito" : "split",

    "manifest_version": 2  // マニフェストのバージョン（必須。現在は2が推奨されている。）
}